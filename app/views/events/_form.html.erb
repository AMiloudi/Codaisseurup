<%= form_for @event, html: { multipart: true } do |f| %>


<div class="form-group">
  <label>Event name</label>
  <%= f.text_field :name, placeholder: "Event name", class: "form-control" %>
</div>

<div class="form-group">
  <label>Location</label>
  <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
</div>

<div class="form-group">
  <label>Start Date</label>
  <%= f.date_field :starts_at, placeholder: "Start Date", class: "form-control" %>
</div>

<div class="form-group">
  <label>End Date</label>
  <%= f.date_field :ends_at, placeholder: "End Date", class: "form-control" %>
</div>


<div class="form-group">
  <label>Capacity</label>
  <%= f.number_field :capacity, placeholder: "Capacity", class: "form-control" %>
</div>

<label>Extra Information</label>

<div class="form-group">
  <%= f.check_box :includes_foods %> Include Food
</div>

<div class="form-group">
  <%= f.check_box :includes_drinks %> Include Drinks
</div>

<label>Categories</label>

<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
<div class="form-group">
  <%= b.check_box(class: "check_box") %> <%= b.object.name %>
</div>
<% end %>

<div class="form-group">
  <label>Nightly Price</label>
  <div class="input-group">
    <div class="input-group-addon">â‚¬</div>
    <%= f.number_field :price, placeholder: "eg. 100", class: "form-control" %>
  </div>
</div>

<label>Photos</label>

<div class="form-group">
  <span class="btn btn-default">
    Upload Photos
    <%= file_field_tag "images[]", type: :file, multiple: true %>
  </span>
</div>

<div id="photos">
  <%= render 'photos/list' %>
</div>

<label>Publish this event?</label>

<div class="form-group">
  <%= f.check_box :active %> Active
</div>

<div class="actions">
  <%= f.submit "Save", class: "btn btn-primary" %>
</div>
<% end %>
